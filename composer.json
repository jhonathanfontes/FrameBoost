{
    "name": "jhonathanfontes/frameboost",
    "description": "Framework Boost PHP - A lightweight and modern PHP framework",
    "type": "framework",
    "license": "MIT",
    "authors": [
        {
            "name": "Jhonathan Fontes",
            "email": "jhonathan@example.com"
        }
    ],
    "require": {
        "php": ">=8.1",
        "twig/twig": "^3.0",
        "vlucas/phpdotenv": "^5.6",
        "symfony/var-dumper": "^6.4",
        "phpmailer/phpmailer": "^6.10"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0"
    },
    "autoload": {
        "psr-4": {
            "FrameBoost\\": "src/",
            "Core\\": "core/",
            "Helper\\": "helper/"
        },
        "files": [
            "core/Helper/helpers.php",
            "core/Helper/functions.php",
            "core/helpers.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "FrameBoost\\Tests\\": "tests/"
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true,
    "scripts": {
        "test": "phpunit",
        "test-coverage": "phpunit --coverage-html coverage"
    }
}